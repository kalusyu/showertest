<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dengguangzijiemianbeijing_normal"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/change_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dengguangqiangruoanniu_normal" />

        <ImageView
            android:id="@+id/color_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/change_color"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dengguangqiangruotiaoshang_caolv__normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/color_frame"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dengbiaoyanse_fenhong_normal" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <com.example.test.ArcButton
                        android:id="@+id/shenlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="115dip"
                        android:layout_marginTop="115dip"
                        android:background="@drawable/shenlansedengguang_selected"
                        android:clickable="true"
                        android:onClick="dingpeng" />

                    <com.example.test.ArcButton
                        android:id="@+id/zise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="133dip"
                        android:layout_marginTop="90dip"
                        android:background="@drawable/zisedengguang_selected"
                        android:clickable="true"
                        android:onClick="dingpeng" />

                    <com.example.test.ArcButton
                        android:id="@+id/fenhong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="132dip"
                        android:layout_marginTop="50dip"
                        android:background="@drawable/fenhongsedengguang_selected"
                        android:clickable="true"
                        android:onClick="pubu" />

                    <com.example.test.ArcButton
                        android:id="@+id/hongse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="116dip"
                        android:layout_marginTop="24dip"
                        android:background="@drawable/hongsedengguang_selected"
                        android:clickable="true"
                        android:onClick="dingpeng" />

                    <com.example.test.ArcButton
                        android:id="@+id/juhong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="95dip"
                         android:layout_marginTop="13dip"
                        android:background="@drawable/juhongsedengguang_selected"
                        android:clickable="true"
                        android:onClick="dingpeng" />
                    
                     <com.example.test.ArcButton
                        android:id="@+id/chengse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="57dip"
                        android:layout_marginTop="13dip"
                        android:background="@drawable/chengsedengguang_selected"
                        android:clickable="true"
                        android:onClick="dingpeng" />
                     
                     <com.example.test.ArcButton
                        android:id="@+id/tuhuang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip"
                        android:layout_marginTop="23dip"
                        android:background="@drawable/tuhuanghuangsedengguang_selected"
                        android:clickable="true"
                        android:onClick="dingpeng" />
                     
                      <com.example.test.ArcButton
                        android:id="@+id/huangse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:layout_marginTop="51dip"
                        android:background="@drawable/huangsedengguang_selected"
                        android:clickable="true"
                        android:onClick="dingpeng" />
                      
                      
                      <com.example.test.ArcButton
                        android:id="@+id/caolvse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:layout_marginTop="90dip"
                        android:background="@drawable/caolvsedengguang_selected"
                        android:clickable="true"
                        android:onClick="cepeng" />

                  
                    <com.example.test.ArcButton
                        android:id="@+id/lvse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dip"
                        android:layout_marginTop="113dip"
                        android:background="@drawable/lvsedengguang_selected"
                        android:clickable="true"
                        android:onClick="dingpeng" />
                    
                     <com.example.test.ArcButton
                         android:id="@+id/hulan"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="55dip"
                         android:layout_marginTop="130dip"
                         android:background="@drawable/hulansedengguang_selected"
                         android:clickable="true"
                         android:onClick="dingpeng" />

                     <com.example.test.ArcButton
                         android:id="@+id/gulan"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="95dip"
                         android:layout_marginTop="130dip"
                         android:background="@drawable/gulansedengguang_selected"
                         android:clickable="true"
                         android:onClick="shouchi" />

                     <ImageView
                         android:id="@+id/center"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="133px"
                         android:layout_marginTop="128px"
                         android:clickable="true"
                         android:onClick="zhongjian"
                         android:src="@drawable/yansexianshi_caolv_normal" />
                    
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>